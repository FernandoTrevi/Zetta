@model Zetta.Models.ViewModels.StockVM
@{
    ViewData["Title"] = "VerStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-3">

    <div class="col-6">
        <h2 class="text-info pl-3">@Model.ProductoNombre</h2>
    </div>
    <br />
    <div class="col-6">
        <h3>Stock Actual: @Model.StockActual</h3>
    </div>
    <hr />
    <br />

    <h4 class="text-body-secondary">Detalle de Movimientos</h4>

    <table class="table table-bordered table-success @*table-striped*@" style="width:100%">

        <thead>
            <tr class="table-info">
                <th>Fecha</th>
                <th>Cantidad</th>
                <th>Concepto</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var movimiento in Model.Movimientos)
            {
                <tr class="@GetConceptoCssClass(movimiento.Concepto)">
                    <td>@movimiento.Fecha</td>
                    <td>@movimiento.Cantidad</td>
                    <td>@movimiento.Concepto</td>

                </tr>
            }
        </tbody>
    </table>
    <div class="row p-1">
        <div class="col-6 col-md-3">
            <a asp-controller="Producto" asp-action="Index" class="btn btn-secondary">Aceptar</a>
        </div>
        @*<div class="col-6 col-md-3">
        <a asp-controller="Stock" asp-action="Index" class="btn btn-danger">Actualizar Stock</a>
        </div>*@
        <div class="col-6 col-md-3">
            <a asp-controller="Stock" asp-action="Index" asp-route-ProductoNombre="@Model.ProductoNombre" class="btn btn-danger">Actualizar Stock</a>
        </div>

    </div>
</div>
@section scripts {
    <script>
        @functions {
        public string GetConceptoCssClass(string concepto)
        {
            if (concepto == "Ingreso de producto" || concepto == "Compras" || concepto == "Devoluciones")
            {
                return "texto-verde";
            }
            else
            {
                return "texto-rojo";
            }
        }
    }

</script>
}
<style>
    .texto-verde {
        color: green;
        font-weight: bold;
    }

    .texto-rojo {
        color: red;
        font-weight: bold;
    }
</style>





