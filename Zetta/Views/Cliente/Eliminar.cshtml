@model Zetta.Models.Cliente

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border p-3 main-container">
    <div class="form-group row">
        <h2 class="text-danger pl-3">Eliminar Cliente</h2>
    </div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" disabled />
            </div>
            <div class="col-md-6">
                <label asp-for="Dni" class="form-label">CUIT / DNI</label>
                <input asp-for="Dni" class="form-control" disabled />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <label asp-for="Direccion" class="form-label">Dirección</label>
                <input asp-for="Direccion" class="form-control" disabled />
            </div>
            <div class="col-md-6">
                <label asp-for="Localidad" class="form-label">Localidad</label>
                <input asp-for="Localidad" class="form-control" disabled />
            </div>
        </div>
        <br />
           
            <form asp-action="ConfirmarEliminar" method="post">
                <input asp-for="Id" hidden />
                <div class="row p-1">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Confirmar Eliminar</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Cliente" asp-action="Index" class="btn btn-secondary form-control">Cancelar</a>
                    </div>
                </div>
            </form>
    </div>
</div>


